{
    "name": "${environmentName}",
    "description": "YugabyteDB",
    "version": "0.0.5",
    "author": "https://github.com/lbthomsen",
    "ssh-key": "lth",
    "containers": [
        {
            "hostname": "yb",
            "template": "debian-buster",
            "peer-criteria": "peers",
            "peer-layout": "servers",
            "size": "${containerSize}", 
            "port-mapping": [
                {
                    "protocol": "tcp",
                    "domain": "${domain}",
                    "internal-port": "5433",
                    "external-port": "${port}"
                }
            ]
        }
    ],
    "peer-criteria": [
        {
            "name": "peers"
        }
    ],
    "peer-layouts": [
        {
            "name": "servers",
            "peer-count": "${numberOfServers}",
            "container-per-peer": "1"
        }
    ],
    "ansible-configuration": {
        "source-url": "https://github.com/lbthomsen/subutai-bp-yugabyte/archive/master.zip",
        "ansible-playbook": "site.yml",
        "extra-vars": [
            {
                "key": "domain",
                "value": "${domain}"
            }, 
            {
                "key": "environment_name",
                "value": "${environmentName}"
            }
        ],
        "groups": [
            {
                "name": "servers",
                "hostnames": [
                    "yb"
                ]
            }
        ]
    },
    "user-variables": {
        "environmentName": {
            "description": "Enter the environment name",
            "type": "string",
            "default": "yb",
            "validation": "[a-zA-Z0-9]+"
        },
        "numberOfServers": {
            "description": "Enter number of nodes",
            "type": "int",
            "default": "3"
        },
        "domain": {
            "description": "Enter the domain name",
            "type": "domain",
            "default": "change.the.domain",
            "validation": "[a-zA-Z0-9]+"
        },
        "port": {
            "description": "Enter the port number",
            "type": "int",
            "default": "5433"
        },
        "containerSize": {
            "description": "Container Size",
            "type": "enum",
            "default": "MEDIUM",
            "validation": "MEDIUM,LARGE,HUGE"
        }
    }
}
